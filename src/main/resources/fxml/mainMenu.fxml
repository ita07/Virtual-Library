<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="mainPane" alignment="CENTER" prefHeight="300.0" prefWidth="300.0"
      xmlns="http://javafx.com/javafx/8.0.171"
      fx:controller="sample.com.ita07.virtuallibrary.controllers.MainMenuController">
    <children>
        <Button fx:id="showBooks" contentDisplay="CENTER" maxWidth="-Infinity" minHeight="-Infinity"
                minWidth="-Infinity" mnemonicParsing="false" onAction="#handleShowButtonActionPerformed"
                prefHeight="30.0" prefWidth="200.0" text="Προβολή όλων των βιβλίων" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets bottom="10.0" top="10.0"/>
            </VBox.margin>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
        <Button fx:id="searchButton" contentDisplay="CENTER" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                onAction="#handleSearchButtonActionPerformed" prefHeight="30.0" prefWidth="200.0"
                text="Αναζήτηση βιβλίου " VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets bottom="20.0" top="20.0"/>
            </VBox.margin>
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
        <Button fx:id="insertBookButton" contentDisplay="CENTER" layoutX="10.0" layoutY="35.0" mnemonicParsing="false"
                onAction="#handleInsertBookButtonActionPerformed" prefHeight="30.0" prefWidth="200.0"
                text="Εισαγωγή βιβλίου" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets bottom="20.0" top="10.0"/>
            </VBox.margin>
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
        <Button fx:id="exitButton" contentDisplay="CENTER" layoutX="10.0" layoutY="60.0" mnemonicParsing="false"
                onAction="#handleExitButtonActionPerformed" prefHeight="30.0" prefWidth="200.0" text="Έξοδος"
                VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets bottom="10.0" top="10.0"/>
            </VBox.margin>
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
    </children>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
