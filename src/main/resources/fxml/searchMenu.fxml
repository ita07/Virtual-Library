<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.com.ita07.virtuallibrary.controllers.SearchMenuController">
    <top>
        <HBox alignment="CENTER" prefHeight="96.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" prefHeight="96.0" prefWidth="384.0" HBox.hgrow="ALWAYS">
                    <children>
                        <TextField fx:id="searchTextfield" alignment="CENTER"
                                   onKeyPressed="#handleSearchTextFieldKeyPressed" prefHeight="37.0" prefWidth="406.0"
                                   promptText="Δωσε Τιτλο ή Συγγραφεα" VBox.vgrow="ALWAYS">
                            <font>
                                <Font size="16.0"/>
                            </font>
                            <VBox.margin>
                                <Insets left="5.0" top="10.0"/>
                            </VBox.margin>
                        </TextField>
                        <Button fx:id="searchButton" alignment="CENTER" mnemonicParsing="false"
                                onAction="#handleSearchButton" prefHeight="37.0" prefWidth="103.0" text="Αναζητηση"
                                VBox.vgrow="ALWAYS">
                            <font>
                                <Font size="16.0"/>
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                            <VBox.margin>
                                <Insets bottom="10.0" left="5.0" top="10.0"/>
                            </VBox.margin>
                        </Button>
                        <Label fx:id="returnLabel" contentDisplay="CENTER"
                               onMouseClicked="#handleMouseClickOnReturnLabel" text="&lt;Αρχικο Μενου" underline="true"
                               VBox.vgrow="ALWAYS">
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="5.0" top="10.0"/>
                            </VBox.margin>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Label>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="96.0" prefWidth="104.0" HBox.hgrow="ALWAYS">
                    <children>
                        <RadioButton fx:id="titleRadioButton" mnemonicParsing="false" onAction="#handleTitleRadioButton"
                                     text="Τιτλος" VBox.vgrow="ALWAYS">
                            <font>
                                <Font size="16.0"/>
                            </font>
                            <VBox.margin>
                                <Insets right="42.0" top="10.0"/>
                            </VBox.margin>
                        </RadioButton>
                        <RadioButton fx:id="authorRadioButton" mnemonicParsing="false"
                                     onAction="#handleAuthorRadioButton" text="Συγγραφεας" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="30.0"/>
                            </VBox.margin>
                            <font>
                                <Font size="16.0"/>
                            </font>
                        </RadioButton>
                    </children>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </HBox>
    </top>
    <center>
        <ListView fx:id="bookList" prefHeight="206.0" prefWidth="600.0" BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
