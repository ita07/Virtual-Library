<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="399.0" prefWidth="663.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="sample.com.ita07.virtuallibrary.controllers.DisplayTableMenuController">
    <center>
        <TableView fx:id="tableView" prefHeight="282.0" prefWidth="663.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="columnBook" prefWidth="75.0" text="Βιβλιο"/>
                <TableColumn fx:id="columnTitle" prefWidth="85.0" text="Τιτλος"/>
                <TableColumn fx:id="columnAuthor" prefWidth="84.0" text="Συγγραφεας"/>
                <TableColumn fx:id="columnISBN" prefWidth="68.0" text="ISBN"/>
                <TableColumn fx:id="columnReleaseYear" prefWidth="94.0" text="Έτος έκδοσης"/>
                <TableColumn fx:id="columnType" prefWidth="56.0" text="Ειδος"/>
                <TableColumn fx:id="columnScientificField" text="Επιστημονικο Πεδιο"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    <top>
        <Button fx:id="returnButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleReturnButton"
                prefHeight="39.0" prefWidth="145.0" text="Αρχικο Μενου" BorderPane.alignment="CENTER">
            <font>
                <Font size="18.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </top>
    <bottom>
        <Button fx:id="deleteButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleDeleteButton"
                text="Διαγραφη" BorderPane.alignment="CENTER">
            <font>
                <Font size="18.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </bottom>
</BorderPane>
